<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %> <br>

    <%= f.fields_for :ingredients do |fi| %>
        <%= fi.label :name %>
        <%= fi.text_field :name %> <br>

        <%= fi.label :quantity %>
        <%= fi.text_field :quantity %> <br>
    <% end %>
    <%= f.submit %>
<% end %>